<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/textViewGoals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bugün Hedefler"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:gravity="start"
        android:paddingStart="16dp"/>

    <!-- Hedefler Listesi Burada Gösterilecek (Örn. RecyclerView) -->

    <TextView
        android:id="@+id/textViewDailyTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Günlük Görevler"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:paddingStart="16dp"/>

    <!-- Günlük Görevler Listesi Burada Gösterilecek -->

</LinearLayout>
